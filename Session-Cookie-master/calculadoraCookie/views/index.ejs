<form action="/calc" method="post">
    <input type="text" name="num1" id="num1">
    <select name="op" id="op">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input type="text" name="num2" id="num2">
    <input type="submit" value="Calcular">
</form>

<% if(contas.length > 0){ %>
    <h2>Contas</h2>
    <ul>
        <% contas.forEach(conta => { %>
            <li><%- conta.num1 %> <%- conta.op %> <%- conta.num2 %> = <%- conta.total %></li>
        <% }) %>
    </ul>
<% } %>
